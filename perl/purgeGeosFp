our $FILE_NESTED_E_A3cld  = "";     # Nested EU  GEOS-FP "A3cld"  file name
our $SIZE_NESTED_E_A3cld  = "";     # Nested EU  GEOS-FP "A3cld"  file size
our $FILE_NESTED_E_A3dyn  = "";     # Nested EU  GEOS-FP "A3dyn"  file name
