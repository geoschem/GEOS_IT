our $SIZE_NESTED_N_I3     = "";     # Nested NA   GEOS-FP "I3"     file size

# SE Nested grid met fields
our $NESTED_S_MET_DIR     = "";     # Nested SE  met field directory
our $FILE_NESTED_S_A1     = "";     # Nested SE  GEOS-FP "A1"     file name
our $SIZE_NESTED_S_A1     = "";     # Nested SE  GEOS-FP "A1"     file size
our $FILE_NESTED_S_A3cld  = "";     # Nested SE  GEOS-FP "A3cld"  file name
our $SIZE_NESTED_S_A3cld  = "";     # Nested SE  GEOS-FP "A3cld"  file size
our $FILE_NESTED_S_A3dyn  = "";     # Nested SE  GEOS-FP "A3dyn"  file name
our $SIZE_NESTED_S_A3dyn  = "";     # Nested SE  GEOS-FP "A3dyn"  file size
our $FILE_NESTED_S_A3mstC = "";     # Nested SE  GEOS-FP "A3mstC" file name
our $SIZE_NESTED_S_A3mstC = "";     # Nested SE  GEOS-FP "A3mstC" file size
our $FILE_NESTED_S_A3mstE = "";     # Nested SE  GEOS-FP "A3mstE" file name
